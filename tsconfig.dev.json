 {
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "outDir": "./dist/src/",
    "sourceRoot": ".",
    "sourceMap": true,
    "watch": true
  },
   "fileGlobs": [
      "./src/*"
   ],
   "exclude": [
     "node_modules",
     "typings",
     "jspm_packages",
     "dist",
     "tests"
   ]
}